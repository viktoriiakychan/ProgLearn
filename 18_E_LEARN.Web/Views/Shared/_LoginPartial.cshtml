@using Microsoft.AspNetCore.Identity
@using _18_E_LEARN.DataAccess.Data.Models.User;

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-white" asp-controller="Admin" asp-action="Index" title="Manage">My Profile</a>
    </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-controller="Admin" asp-action="Logout" >
            <button id="logout" type="submit" class="nav-link btn btn-link text-light border-0" style="text-transform:none">Logout</button>
        </form>
    </li>
}
else
{
        <li class="nav-item btn btn-sm btn-outline-light" style="margin-right:15px;">
        <a class="nav-link text-white" id="register" asp-controller="Admin" asp-action="SignUp">Register</a>
    </li>
        <li class="nav-item btn btn-sm btn-outline-light">
            <a class="nav-link text-white" id="login" asp-controller="Admin" asp-action="SignIn">Login</a>
    </li>
}
</ul>
